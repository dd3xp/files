<div class="sidebar">
  <div class="sidebar-header">
    <h2>文件传输系统</h2>
  </div>
  <div class="sidebar-nav">
    <%= link_to files_path, class: "nav-item #{'active' if request.path.start_with?('/files')}" do %>
      <i class="fas fa-folder"></i>
      <span>文件管理</span>
    <% end %>
    <%= link_to terminal_path, class: "nav-item #{'active' if request.path.start_with?('/terminal')}" do %>
      <i class="fas fa-terminal"></i>
      <span>终端操作</span>
    <% end %>
    <%= link_to settings_path, class: "nav-item #{'active' if request.path.start_with?('/settings')}" do %>
      <i class="fas fa-cog"></i>
      <span>设置</span>
    <% end %>
  </div>
</div> 